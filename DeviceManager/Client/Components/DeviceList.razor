<h3>DeviceList</h3>

<table class="table">

    <thead>

        <tr>

            <th scope="col">Device Id</th>

            <th scope="col">Location</th>

            <th scope="col">Date</th>

            <th scope="col">Type</th>

            <th scope="col">Status</th>

        </tr>

    </thead>

    <tbody>
        
    @foreach(var device in Devices)
    {
            <tr>
                <th scope="row">@device.Location</th>
                <th scope="row">@device.DeviceId</th>
                <th scope="row">@device.Date</th>
                <th scope="row">@device.DeviceType</th>
                <th scope="row">@device.Status</th>
            </tr>
    }

        

    </tbody>

</table>